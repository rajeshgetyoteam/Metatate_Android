<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center|start"
            android:orientation="vertical">


            <TextView

                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/tvProductTitle"
                style="@style/TextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:singleLine="true"
                android:text="Product Name"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/tvProductDescription"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCourseTitle"
                android:ellipsize="end"
                android:gravity="start"
                android:singleLine="true"
                android:text="Running Shoes For Men and chi"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/tvDPrice"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/strike_text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_marginStart="@dimen/_5sdp"
                    android:id="@+id/tvPrice"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="1999 CHI"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_marginStart="@dimen/_5sdp"
                    android:id="@+id/tvPriceDiscount"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="15% Off"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/tvFree"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:singleLine="true"
                android:text="Free Delivery"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />
            <RatingBar
                android:layout_marginStart="@dimen/_minus1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:id="@+id/mRat"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:isIndicator="false"
                android:progressBackgroundTint="@color/colorAccent"
                android:progressTint="@color/color_text_green"
                android:rating="4.5">

            </RatingBar>




        </LinearLayout>
    </LinearLayout>

</LinearLayout>