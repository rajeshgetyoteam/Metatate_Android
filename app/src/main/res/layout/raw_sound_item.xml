<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/carditem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorPrimary"
                    android:indeterminateTintMode="src_atop"
                    android:visibility="invisible" />
                <ImageView
                    android:tint="@color/colorPrimary"
                    android:padding="@dimen/_8sdp"
                    android:id="@+id/ivSoundLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_lock_round" />
                <ImageView
                    android:id="@+id/ivSoundPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_play_black" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSoundtTitle"
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:gravity="start"
                    android:text="Walking"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_15sdp" />


                    <TextView
                        android:layout_marginEnd="@dimen/_60sdp"
                        android:id="@+id/tvsoundSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextMiduam"
                        android:gravity="start"
                        android:layout_below="@id/tvSoundtTitle"
                        android:text="06 Min"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layCoin"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/ic_home_min_card_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            app:srcCompat="@drawable/logo_splash">

                        </ImageView>

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_marginEnd="@dimen/_5sdp"
                            style="@style/TextRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="center|start"
                            android:text="0"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSoundMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        style="@style/TextMiduam"
                        android:gravity="start"
                        android:text="06 Min"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </LinearLayout>


                </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>