<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivMomentImages"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/ivMomentLock"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="#33000000"
                        android:padding="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/lock" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvMomentMin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextRegular"
                        android:gravity="start"
                        android:text="06 Min"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_15sdp" />
                    <LinearLayout
                        android:id="@+id/layCoin"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/ic_home_min_card_white"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center">

                        <ImageView

                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            app:srcCompat="@drawable/logo_splash">

                        </ImageView>

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_marginEnd="@dimen/_5sdp"
                            style="@style/TextRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="center|start"
                            android:text="null"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </RelativeLayout>




                <TextView
                    android:id="@+id/tvMomentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/TextBold"
                    android:gravity="start"
                    android:text="Walking"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tvMomentSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                   style="@style/TextRegular"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="Please help your body"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>