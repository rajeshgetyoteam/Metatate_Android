<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    tools:context="com.getyoteam.budamind.activity.SignInActivity">

    <ScrollView
        android:id="@+id/scrollLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_150sdp">

            <ImageView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_40sdp"
                app:srcCompat="@drawable/logo_splash" />

            <TextView

                android:id="@+id/tvWelcomeClarity"
                style="@style/TextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="Welcome to \nMetatate"
                android:textColor="@color/app_pink_color"
                android:textSize="@dimen/_25sdp" />

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mindfulness is Metatate "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">


                <EditText
                    android:id="@+id/etEmail"
                    style="@style/TextLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/edittext_border"
                    android:hint="Enter Email Address"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp" />


                <TextView
                    style="@style/TextLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:background="@color/color_white"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="@string/str_email_address"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone">


                <EditText
                    android:id="@+id/etPassword"
                    style="@style/TextLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/edittext_border"
                    android:hint="Enter Password"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp" />

                <TextView
                    style="@style/TextLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:background="@color/color_white"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Password"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvSignUp"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_450sdp"
                android:gravity="center|end"
                android:text="@string/str_not_account"
                android:textAllCaps="false"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />

            <TextView
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/_250sdp"
                android:layout_below="@+id/etEmail"
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0sdp"></TextView>


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_3sdp"
        app:srcCompat="@drawable/ic_back">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <com.facebook.login.widget.LoginButton
            android:id="@+id/defaultLoginButtonFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/selected_state"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/nunitosans_bold"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp" />

            <ProgressBar
                android:id="@+id/progressBarSignIn"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progress"
                android:paddingEnd="@dimen/_20sdp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_button_background_facebook"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSignUpFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/ic_facebook"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/nunitosans_bold"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/str_continue_with_facebook"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />
            <ProgressBar
                android:id="@+id/progressBarFacebook"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:paddingEnd="@dimen/_20sdp"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progress"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_button_background_google"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSignUpGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/ic_google"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/nunitosans_bold"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/str_continue_with_google"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />

            <ProgressBar
                android:id="@+id/progressBarGoogle"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:paddingEnd="@dimen/_20sdp"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progress"

                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layPrivace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvTermsCondi"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_by_using_clarity_you_agree_to_our1"
                android:textAllCaps="false"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTurms"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_by_using_clarity_you_agree_to_our"
                    android:textAllCaps="false"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvPrivacy"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_by_using_privacy"
                    android:textAllCaps="false"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</RelativeLayout>