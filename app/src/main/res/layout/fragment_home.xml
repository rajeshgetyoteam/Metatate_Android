<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.getyoteam.budamind.fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F3EFF6"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/lblNamste"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Namaste"
                        android:textColor="#807A7A"
                        android:textSize="@dimen/_18sdp" />

                    <TextView

                        android:id="@+id/lblName"
                        style="@style/TextMiduam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblNamste"

                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_614192"
                        android:textSize="@dimen/_20sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/roundr_bg_balance"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp">

                        <TextView

                            style="@style/TextRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Balance "
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_meditation">

                        </ImageView>

                        <TextView
                            android:id="@+id/tvBalance"
                            style="@style/TextRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/roundr_bg_balance"
                            android:padding="@dimen/_5sdp"
                            android:text="$CHI 00.00"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:gravity="center">

                    <RelativeLayout

                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="@dimen/_190sdp"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_shadow" />

                    </RelativeLayout>


                    <RelativeLayout

                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="@dimen/_190sdp"
                        android:layout_centerInParent="true">

<!--                        <at.grabner.circleprogress.CircleProgressView-->

<!--                            android:id="@+id/circleView"-->
<!--                            android:layout_width="@dimen/_130sdp"-->
<!--                            android:layout_height="@dimen/_130sdp"-->
<!--                            android:layout_centerInParent="true"-->
<!--                            android:background="@color/transparent"-->
<!--                            android:visibility="gone"-->
<!--                            app:cpv_autoTextSize="false"-->
<!--                            app:cpv_barColor="#5F58B8"-->
<!--                            app:cpv_barColor1="#AB80C8"-->
<!--                            app:cpv_barColor2="#8C6EB1"-->
<!--                            app:cpv_barWidth="35dp"-->
<!--                            app:cpv_fillColor="@color/transparent"-->
<!--                            app:cpv_innerContourSize="0dp"-->
<!--                            app:cpv_maxValue="100"-->
<!--                            app:cpv_outerContourSize="0dp"-->
<!--                            app:cpv_rimColor="@color/transparent"-->
<!--                            app:cpv_rimWidth="@dimen/_45sdp"-->
<!--                            app:cpv_seekMode="false"-->
<!--                            app:cpv_showUnit="true"-->
<!--                            app:cpv_textColor="@color/color_6E81AO"-->
<!--                            app:cpv_textScale="1"-->
<!--                            app:cpv_textSize="@dimen/_20sdp"-->
<!--                            app:cpv_textTypeface="@style/TextRegular"-->
<!--                            app:cpv_unit="Minute"-->
<!--                            app:cpv_unitColor="@color/color_6E81AO"-->
<!--                            app:cpv_unitPosition="bottom"-->
<!--                            app:cpv_unitScale="1"-->
<!--                            app:cpv_unitSize="@dimen/_10sdp"-->
<!--                            app:cpv_unitTypeface="@style/TextRegular"-->
<!--                            app:cpv_value="0" />-->

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/circularProgressBar"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_centerInParent="true"
                            app:cpb_background_progressbar_color="@color/transparent"
                            app:cpb_background_progressbar_width="@dimen/_25sdp"
                            app:cpb_progress="00"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color_direction="top_to_bottom"
                            app:cpb_progressbar_color_end="#8C6EB1"
                            app:cpb_progressbar_color_start="#5F58B8"
                            app:cpb_progressbar_width="@dimen/_30sdp"
                            app:cpb_round_border="true" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvProgress"
                                style="@style/TextBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/color_6E81AO"
                                android:textSize="@dimen/_18sdp" />

                            <TextView
                                android:layout_marginTop="@dimen/_minus5sdp"
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Minutes"
                                android:textColor="@color/color_6E81AO"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <TextView
                        style="@style/TextMiduam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:text="@string/str_daily_task"
                        android:textColor="@color/color_614192"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Earn $CHI"
                        android:textColor="#807A7A"
                        android:textSize="@dimen/_15sdp" />
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTasks"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:scrollbars="none"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    style="@style/TextMiduam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="start"
                    android:text="Recommended For You"
                    android:textColor="@color/color_614192"
                    android:textSize="@dimen/_18sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlSubscribeNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="@color/color_white"
                        app:cardCornerRadius="@dimen/_35sdp">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_unlock_red" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_17sdp"
                        android:background="@drawable/ic_home_full_card_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:fontFamily="@font/nunitosans_semibold"
                            android:gravity="center"
                            android:text="Lorem ipsum, or lipsum as it is sometimes \nknown, is dummy text used in laying out print"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:fontFamily="@font/nunitosans_bold"
                            android:gravity="center"
                            android:text="@string/str_unlock_the_clarity_library"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_18sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSubscribe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:background="@drawable/background_for_subscription"
                        android:fontFamily="@font/nunitosans_bold"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_subscribe_now"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_16sdp" />
                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInternetToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_blue"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_close_white_small"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/nunitosans_semibold"
                android:padding="@dimen/_10sdp"
                android:text="@string/str_check_internet_connection"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_15sdp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>