<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.getyoteam.budamind.fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F3EFF6"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/lblNamste"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Namaste"
                        android:textColor="#807A7A"
                        android:textSize="@dimen/_18sdp" />

                    <TextView

                        android:id="@+id/lblName"
                        style="@style/TextMiduam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblNamste"

                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_614192"
                        android:textSize="@dimen/_20sdp" />

                    <LinearLayout
                        android:id="@+id/layBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/roundr_bg_balance"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_meditation">

                        </ImageView>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="vertical">

<!--                            <TextView-->

<!--                                style="@style/TextRegular"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->

<!--                                android:text="Balance "-->
<!--                                android:textColor="@color/color_white"-->
<!--                                android:textSize="@dimen/_12sdp" />-->

                            <TextView
                                android:id="@+id/tvBalance"
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CHI 00.00"
                                android:textColor="@color/color_614192"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:gravity="center">

                    <RelativeLayout

                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_shadow" />

                    </RelativeLayout>


                    <RelativeLayout

                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_centerInParent="true">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/circularProgressBar"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_180sdp"
                            android:layout_centerInParent="true"
                            app:cpb_background_progressbar_color="@color/transparent"
                            app:cpb_background_progressbar_width="@dimen/_10sdp"
                            app:cpb_progress="00"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color_direction="top_to_bottom"
                            app:cpb_progressbar_color_end="#8C6EB1"
                            app:cpb_progressbar_color_start="#5F58B8"
                            app:cpb_progressbar_width="@dimen/_28sdp"
                            app:cpb_round_border="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvProgress"
                                style="@style/TextBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/color_6E81AO"
                                android:textSize="@dimen/_16sdp" />

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Weekly Target"
                                android:textColor="@color/color_6E81AO"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">


                    <TextView
                        android:id="@+id/tvGoal"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:background="@drawable/roundr_bg_balance"
                        android:backgroundTint="@color/color_white"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set DAILY GOAL - 00 Minutes"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">

                    <LinearLayout
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:gravity="center"
                        android:background="@drawable/roundr_bg_balance"
                        android:backgroundTint="@color/color_white"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView

                            style="@style/TextBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Rewards"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />
                        <TextView
                            android:id="@+id/tvGoalEarn"
                            style="@style/TextBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/0 $CHI"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <TextView
                        style="@style/TextMiduam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:text="@string/str_daily_task"
                        android:textColor="@color/color_614192"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:visibility="gone"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Earn $CHI"
                        android:textColor="#807A7A"
                        android:textSize="@dimen/_15sdp" />
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTasks"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:scrollbars="none"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    style="@style/TextMiduam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="start"
                    android:text="Recommended For You"
                    android:textColor="@color/color_614192"
                    android:textSize="@dimen/_18sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlSubscribeNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="@color/color_white"
                        app:cardCornerRadius="@dimen/_35sdp">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_unlock_red" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_17sdp"
                        android:background="@drawable/ic_home_full_card_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:fontFamily="@font/nunitosans_semibold"
                            android:gravity="center"
                            android:text="Lorem ipsum, or lipsum as it is sometimes \nknown, is dummy text used in laying out print"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:fontFamily="@font/nunitosans_bold"
                            android:gravity="center"
                            android:text="@string/str_unlock_the_clarity_library"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_18sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSubscribe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:background="@drawable/background_for_subscription"
                        android:fontFamily="@font/nunitosans_bold"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_subscribe_now"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_16sdp" />
                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInternetToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_blue"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_close_white_small"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/nunitosans_semibold"
                android:padding="@dimen/_10sdp"
                android:text="@string/str_check_internet_connection"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_15sdp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>