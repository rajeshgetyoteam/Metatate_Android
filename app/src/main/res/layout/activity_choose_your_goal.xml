                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBetterSleep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:elevation="0dp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/ivBetterSleep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_icon_light"
                        android:scaleType="fitXY" />

                    <FrameLayout
                        android:id="@+id/flBetterSleep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cbBetterSleep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableTop="@drawable/ic_better_sleep"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/TextMiduam"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_better_sleep"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvIncreaseHappiness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/color_card_7eb1e2"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/ivIncreaseHappiness"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_icon_light"
                        android:scaleType="fitXY" />

                    <FrameLayout
                        android:id="@+id/flIncreaseHappiness"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cbIncreaseHappiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableTop="@drawable/ic_incress_happiness"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/TextMiduam"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_increase_happiness"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvReduceAnxiety"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5"
