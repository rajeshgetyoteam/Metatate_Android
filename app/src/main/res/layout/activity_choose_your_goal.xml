<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.getyoteam.budamind.activity.ChooseYourGoalActivity">



    <TextView
        android:id="@+id/tvHeader"
        style="@style/TextBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:text="Choose your goals"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_22sdp" />

    <TextView
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/tvSkip"
        style="@style/TextMiduam"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Skip"
        android:textColor="#707070"
        android:textSize="@dimen/_16sdp" />

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvHeader"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="vertical"
            tools:context="com.getyoteam.budamind.activity.ChooseYourGoalActivity">

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/str_take_a_deep_breath_and_think_about_nwhat_is_bothering_you_at_the_moment"
                android:textColor="#333333"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImproveFocus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/color_card_ebb96b"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/ivImproveFocus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_icon_light"
                        android:scaleType="fitXY" />

                    <FrameLayout
                        android:id="@+id/flImproveFocus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cbImproveFocus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableTop="@drawable/ic_improve_focus"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/TextMiduam"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_improve_focus"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvReduceStress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/ivReduceStress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_icon_light"
                        android:scaleType="fitXY" />

                    <FrameLayout
                        android:id="@+id/flReduceStress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cbReduceStress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableTop="@drawable/ic_reduce_stress"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/TextMiduam"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_reduce_stress"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
