                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableTop="@drawable/ic_develop_gratitue"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/TextMiduam"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_develop_gratitute"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBuildSelfEsteem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/color_card_ebb96b"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/ivBuildSelfEsteem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_icon_light"
                        android:scaleType="fitXY" />

                    <FrameLayout
                        android:id="@+id/flBuildSelfEsteem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cbBuildSelfEsteem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableTop="@drawable/ic_build_esteem"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/TextMiduam"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_build_self_esteem"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLearnToMeditate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/color_card_7eb1e2"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/ivLearnToMeditate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_icon_light"
                        android:scaleType="fitXY" />

                    <FrameLayout
                        android:id="@+id/flLearnToMeditate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cbLearnToMeditate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableTop="@drawable/ic_learn_meditate"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/TextMiduam"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/str_learn_to_meditate"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:background="@drawable/selected_state"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCountinue"
                    style="@style/TextMiduam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/str_continue"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16sdp" />

                <ProgressBar
                    android:id="@+id/progressContinue"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:indeterminateDrawable="@drawable/progress"
                    android:paddingEnd="@dimen/_20sdp"
                    android:visibility="invisible" />

            </RelativeLayout>
