<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.getyoteam.budamind.activity.NotificationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivHeaderLeft"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:text="@string/str_notifications"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_18sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextMiduam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_music_library"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:text="@string/str_courses"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_18sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:theme="@style/SCBSwitch"
            app:thumbTint="@color/app_pink_color"
            app:trackTint="@color/app_pink_color_light" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@color/color_text_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextMiduam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_music_note"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:text="@string/str_sounds"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_18sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:theme="@style/SCBSwitch"
            app:thumbTint="@color/app_pink_color"
            app:trackTint="@color/app_pink_color_light" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@color/color_text_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextMiduam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_moment"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:text="@string/str__moments"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_18sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swMoment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:theme="@style/SCBSwitch"
            app:thumbTint="@color/app_pink_color"
            app:trackTint="@color/app_pink_color_light" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@color/color_text_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextMiduam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_notification_alarm"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:text="@string/str_push_notification"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_18sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swPushNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:theme="@style/SCBSwitch"
            app:thumbTint="@color/app_pink_color"
            app:trackTint="@color/app_pink_color_light" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@color/color_text_gray" />

</LinearLayout>
