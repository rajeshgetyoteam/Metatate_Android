<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_140sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCourseImages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/layPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_home_min_card_white"
                    android:gravity="center">

                    <ImageView

                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:srcCompat="@drawable/logo_splash">

                    </ImageView>

                    <TextView
                        android:id="@+id/tvPrice"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:text="null"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView

                android:id="@+id/ivLock"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/lock" />

            <ImageView
                android:id="@+id/ivCourseImagesColor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#80666666"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCourseTitle"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Lotus Globla"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tvCourseSubTitle"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="10 mins"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>