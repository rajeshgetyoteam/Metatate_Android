<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:background="@color/color_white"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/ivClose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="start"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_close_black"
            android:visibility="visible" />

        <LinearLayout

            android:orientation="vertical"
            android:layout_below="@+id/ivClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="How much would you like to withdraw?"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_18sdp"
                style="@style/TextBold"/>

            <EditText

                android:id="@+id/etAddress"
                style="@style/TextLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/edittext_border"
                android:hint="Enter ERC-20 Receive Address"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblAmount"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:backgroundTint="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount \n00"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_15sdp"
                    style="@style/TextBold"/>

                <SeekBar
                    android:id="@+id/seekAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxHeight="@dimen/_4sdp"
                    android:minHeight="@dimen/_4sdp"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_amount_drawable"
                    android:thumbTint="@color/colorPrimary" />

                <TextView
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:background="@drawable/round_corner_bg"
                    android:id="@+id/lblProgress"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="0%"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <EditText
                android:visibility="gone"
                android:id="@+id/etAmmount"
                style="@style/TextLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/edittext_border"
                android:hint="How much you want to withdraw?"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp" />

            <RelativeLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/selected_state"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSend"
                    style="@style/TextMiduam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Withdraw"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_17sdp" />

                <ProgressBar
                    android:id="@+id/progressBarSignIn"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:indeterminateDrawable="@drawable/progress"
                    android:paddingEnd="@dimen/_20sdp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:id="@+id/tvNote"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/label_note"
                    android:textAllCaps="false"
                    android:textColor="#1D1D1D"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>