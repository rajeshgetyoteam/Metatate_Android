<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.getyoteam.budamind.activity.SignUpActivity">
    <include
            layout="@layout/actionbar_layout"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/str_first_name"
                      android:textSize="@dimen/_14sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_20sdp"
                      android:fontFamily="@font/nunitosans_regular"
                      android:textColor="@color/color_text_gray"/>
            <EditText android:layout_width="match_parent"
                      android:padding="@dimen/_5sdp"
                      android:id="@+id/etFirstName"
                      android:maxLines="1"
                      android:inputType="text"
                      android:fontFamily="@font/nunitosans_regular"
                      android:paddingStart="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/edittext_border"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/str_last_name"
                      android:textSize="@dimen/_14sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_20sdp"
                      android:fontFamily="@font/nunitosans_regular"
                      android:textColor="@color/color_text_gray"/>
            <EditText android:layout_width="match_parent"
                      android:id="@+id/etLastName"
                      android:padding="@dimen/_5sdp"
                      android:maxLines="1"
                      android:inputType="text"
                      android:fontFamily="@font/nunitosans_regular"
                      android:paddingStart="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/edittext_border"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/str_email_address"
                      android:textSize="@dimen/_14sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_20sdp"
                      android:fontFamily="@font/nunitosans_regular"
                      android:textColor="@color/color_text_gray"/>
            <EditText android:layout_width="match_parent"
                      android:id="@+id/etEmail"
                      android:padding="@dimen/_5sdp"
                      android:maxLines="1"
                      android:inputType="textEmailAddress"
                      android:fontFamily="@font/nunitosans_regular"
                      android:paddingStart="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/edittext_border"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/str_password"
                      android:textSize="@dimen/_14sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_20sdp"
                      android:fontFamily="@font/nunitosans_regular"
                      android:textColor="@color/color_text_gray"/>
            <EditText android:layout_width="match_parent"
                      android:id="@+id/etPassword"
                      android:padding="@dimen/_5sdp"
                      android:maxLines="1"
                      android:inputType="textPassword"
                      android:fontFamily="@font/nunitosans_regular"
                      android:paddingStart="@dimen/_10sdp"
                      android:paddingEnd="@dimen/_25sdp"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/edittext_border"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/str_re_enter_password"
                      android:textSize="@dimen/_14sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_20sdp"
                      android:fontFamily="@font/nunitosans_regular"
                      android:textColor="@color/color_text_gray"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/etReEnterPassword"
                        android:padding="@dimen/_5sdp"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:fontFamily="@font/nunitosans_regular"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"/>
                <CheckBox
                        android:id="@+id/cbPassword"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ic_eye_close"
                        android:layout_marginEnd="10dp"/>
            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center"
                          android:layout_marginTop="@dimen/_20sdp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="@string/str_by_using_clarity_you_agree_to_our"
                        android:layout_width="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textColor="@color/color_black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tvTermsCondi"
                        android:text="@string/str_terms_condition"
                        android:layout_width="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:textColor="@color/color_black"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/selected_state"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tvSignUp"
                        android:text="@string/str_sign_up"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        app:textAllCaps="true"
                        android:gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/nunitosans_bold"
                        android:padding="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"/>

                <ProgressBar
                        android:id="@+id/progressBarSignUp"
                        android:layout_width="wrap_content"
                        android:visibility="invisible"
                        android:paddingEnd="@dimen/_20sdp"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:indeterminateDrawable="@drawable/progress"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/str_or"
                      android:textSize="@dimen/_14sdp"
                      android:visibility="gone"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:fontFamily="@font/nunitosans_regular"
                      android:textColor="@color/color_black"/>

            <com.facebook.login.widget.LoginButton
                    android:id="@+id/defaultLoginButtonFB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:visibility="visible"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_button_background_facebook"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tvSignUpFacebook"
                        android:text="@string/str_continue_with_facebook"
                        android:layout_width="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/nunitosans_bold"
                        android:padding="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_facebook"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"/>

                <ProgressBar
                    android:id="@+id/progressBarFacebook"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:indeterminateDrawable="@drawable/progress"
                    android:paddingEnd="@dimen/_20sdp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:visibility="visible"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_button_background_google"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSignUpGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:drawableStart="@drawable/ic_google"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/nunitosans_bold"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/str_continue_with_google"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16sdp" />

                <ProgressBar
                        android:id="@+id/progressBarGoogle"
                        android:layout_width="wrap_content"
                        android:visibility="invisible"
                        android:paddingEnd="@dimen/_20sdp"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:indeterminateDrawable="@drawable/progress"

                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center"
                          android:layout_marginTop="@dimen/_20sdp"
                          android:layout_marginBottom="@dimen/_20sdp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:orientation="horizontal">
                <TextView
                        android:text="@string/str_have_an_account"
                        android:layout_width="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:textColor="@color/color_black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tvSignIn"
                        android:text="@string/str_sign_in"
                        android:layout_width="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:textColor="@color/color_blue"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>