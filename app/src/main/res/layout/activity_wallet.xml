<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.getyoteam.budamind.fragment.HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiang_bg">

        <RelativeLayout
            android:id="@+id/actonBar"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivHeaderLeft"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvHeader"
                style="@style/TextMiduam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Wallet"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_18sdp" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/actonBar"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"

                        android:layout_height="@dimen/_40sdp"
                        app:srcCompat="@drawable/logo_splash" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvMyBalance"
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="0.00 "
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_25sdp" />

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" Balance"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_17sdp" />
                        </LinearLayout>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvBalance"
                            style="@style/TextRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center|start"
                            android:text="$0.00 "
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_18sdp" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Total Earned"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_17sdp" />

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Used"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_17sdp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"

                            android:layout_height="@dimen/_30sdp"
                            app:srcCompat="@drawable/logo_splash" />

                        <TextView
                            android:id="@+id/tvTotEarn"
                            style="@style/TextRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_20sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"

                            android:layout_height="@dimen/_30sdp"
                            app:srcCompat="@drawable/logo_splash" />

                        <TextView
                            style="@style/TextRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/_20sdp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvReceived"
                        style="@style/TextMiduam"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_corner_bg"
                        android:backgroundTint="@color/color_white"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Withdraw"
                        android:textColor="@color/app_pink_color"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/tvSend"
                        style="@style/TextMiduam"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/round_corner_bg"
                        android:backgroundTint="@color/color_white"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Send"
                        android:textColor="@color/app_pink_color"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/round_corner_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"

                        android:layout_marginTop="@dimen/_10sdp"
                        app:srcCompat="@drawable/logo_splash" />

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Claim bonuses"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_20sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/color_white" />

                <RelativeLayout
                    android:id="@+id/layhostory"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:rotation="180"
                        android:tint="@color/color_white"
                        app:srcCompat="@drawable/ic_back_white" />

                    <TextView

                        style="@style/TextRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Token History"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_16sdp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@color/color_white" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>


                <RelativeLayout

                    android:id="@+id/layMore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:rotation="180"
                        android:tint="@color/color_white"
                        app:srcCompat="@drawable/ic_back_white" />

                    <TextView


                        style="@style/TextRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:gravity="center|end"
                        android:text="More"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBarW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/color_white"
            android:visibility="gone">

        </ProgressBar>
    </RelativeLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>