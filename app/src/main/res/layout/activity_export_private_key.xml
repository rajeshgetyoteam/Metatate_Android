<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.getyoteam.budamind.activity.TermsOfUseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@color/color_perot"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivHeaderLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_back_white" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_bold"
                android:gravity="center"
                android:text="Private Key"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_18sdp" />
        </RelativeLayout>

        <LinearLayout
            android:paddingTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_20sdp"

            android:paddingEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_8sdp">
                <LinearLayout

                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nunitosans_regular"
                            android:gravity="center|start"
                            android:text="Address"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView

                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nunitosans_semibold"
                            android:gravity="center|start"
                            android:text="3kxcLKvscdkjNpdslkv"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/round_corner_border_gray"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text=" COPY "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@color/color_black">

            </View>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/nunitosans_bold"
                android:gravity="center"
                android:text="@string/str_private_key"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_18sdp" />


            <TextView

                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/nunitosans_regular"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/_15sdp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layPrivateKey"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp">
                        <LinearLayout

                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/nunitosans_regular"
                                    android:gravity="center|start"
                                    android:text="Private Key"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView

                                    android:id="@+id/tvPrivateKey"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/nunitosans_semibold"
                                    android:gravity="center|start"
                                    android:text="OEbf8swxcLKvscdkjNpdslkv"
                                    android:textColor="@color/color_red"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:background="@drawable/round_corner_border_gray"
                                android:fontFamily="@font/nunitosans_semibold"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text=" COPY "
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/squre_corner_border_gray"
                    android:hint="Enter Password"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/_15sdp">

                </EditText>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/nunitosans_regular"
                android:gravity="center|start"
                android:text="Warning : Nevar disclose this key Anyone with your Private keys can steal any assets heald in your"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/layConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvExport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"

                    android:background="@drawable/selected_state"
                    android:backgroundTint="@color/color_text_gray"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"

                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvConfirm"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_5sdp"

                    android:layout_weight="1"
                    android:background="@drawable/selected_state"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/color_1D1D1D"

                    android:textSize="@dimen/_16sdp"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_weight="0"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvDone"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:background="@drawable/selected_state"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="@color/color_1D1D1D"

                    android:textSize="@dimen/_16sdp"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>