<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.getyoteam.budamind.activity.TermsOfUseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@color/color_perot"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivHeaderLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_back_white" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_bold"
                android:gravity="center"
                android:text="Send Token"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_18sdp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_30sdp"
            android:paddingEnd="@dimen/_20sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etWalletAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/squre_corner_border_gray"
                    android:hint="Enter your wallet address"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/_15sdp">

                </EditText>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/squre_corner_border_gray"
                    android:hint="Enter your password"
                    android:padding="@dimen/_5sdp"
                    android:inputType="textPassword"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/_15sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/gasLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/squre_corner_border_gray"
                        android:hint="Gas limit"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/color_text_gray"
                        android:textSize="@dimen/_15sdp">

                    </EditText>

                    <EditText
                        android:id="@+id/etbnbAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/squre_corner_border_gray"
                        android:hint="BNB amount"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/color_text_gray"
                        android:textSize="@dimen/_15sdp">

                    </EditText>

                </LinearLayout>

                <EditText
                    android:id="@+id/etReciverWalletAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/squre_corner_border_gray"
                    android:hint="Enter receier wallet address"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/_15sdp">

                </EditText>
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:visibility="visible">


                <TextView
                    android:id="@+id/tvSend"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_state"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/color_1D1D1D"

                    android:textSize="@dimen/_16sdp"
                    android:visibility="visible" />


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>